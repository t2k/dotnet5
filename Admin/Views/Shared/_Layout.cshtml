<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>KYC: Administration</title>
  @Styles.Render("~/Content/css")
  @Scripts.Render("~/bundles/modernizr")
</head>
<body>
  <div class="navbar navbar-inverse navbar-fixed-top">
    <div class="container">
      <div class="navbar-header">
        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        <strong>@Html.ActionLink("Home", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })</strong>
      </div>
      <div class="navbar-collapse collapse">
        <ul class="nav navbar-nav">
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">Risk<span class="caret"></span></a>
            <ul class="dropdown-menu" role="menu">
              <li>@Html.ActionLink("Risk-Class", "Index", "RiskClass")</li>
              <li>@Html.ActionLink("Risk-Category", "Index", "RiskCategory")</li>
              <li>@Html.ActionLink("Risk-Items", "Index", "RiskItem")</li>
              <li>@Html.ActionLink("Report Builder", "Index", "RiskReports")</li>
              <li class="divider"></li>
              <li>@Html.ActionLink("Geographic Risk", "Index", "GeographicRiskRatings")</li>
            </ul>
          </li>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">SAP<span class="caret"></span></a>
            <ul class="dropdown-menu" role="menu">
              <li>@Html.ActionLink("Legal Form", "Index", "SAPLegalForms")</li>
              <li>@Html.ActionLink("BP Status", "Index", "SAPBPStatus")</li>
              <li>@Html.ActionLink("Country", "Index", "SAPCountries")</li>
              <li>@Html.ActionLink("Legal Entities", "Index", "SAPLegalEntities")</li>
              <li>@Html.ActionLink("Risk Sector", "Index", "SAPRiskSectors")</li>
              <li>@Html.ActionLink("Systematic", "Index", "SAPSystematics")</li>
              <li>@Html.ActionLink("Industry", "Index", "SAPIndustries")</li>
            </ul>
          </li>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">Documents<span class="caret"></span></a>
            <ul class="dropdown-menu" role="menu">
              <li>@Html.ActionLink("Document Type", "Index", "DocumentTypes")</li>
              <li>@Html.ActionLink("Document Rules", "Index", "DocumentRules")</li>
              <li>@Html.ActionLink("Risk Cycles", "Index", "DocumentRiskCycles")</li>
              <li class="divider"></li>
            </ul>
          </li>

          <li>@Html.ActionLink("Employee", "Index", "Employees")</li>
          <li>@Html.ActionLink("Role", "Index", "Roles")</li>
          <li>@Html.ActionLink("Region", "Index", "Regions")</li>
          <li>@Html.ActionLink("Department", "Index", "Departments")</li>
          <li>@Html.ActionLink("Migrate", "Index", "DataMigrate")</li>

        </ul>
      </div>
    </div>
  </div>
  <div class="container body-content">
    @RenderBody()
    <hr />
    <footer>
      <p>&copy; @DateTime.Now.Year - Administration and Static Data</p>
    </footer>
  </div>
  @Scripts.Render("~/bundles/jquery")
  @Scripts.Render("~/bundles/bootstrap")
  @RenderSection("scripts", required: false)
</body>
</html>